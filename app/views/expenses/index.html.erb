<h3><i class="fas fa-shopping-cart"></i> Gastos de la comunidad  </h3>
<table class="table table-striped table-dark col-6 fees-table">
  <thead>
    <tr>
      <th scope="col">Nombre gasto</th>
      <th scope="col">Descripcion</th>
      <th scope="col">Valor</th>
    </tr>
  </thead>
  <tbody>
    <% @user.community.expenses.each do |expense| %>
		<tr>
		<td><%= expense.name %></td>
		<td><%= expense.description %></td>
		<td><%= number_to_currency(expense.value, precision: 0) %></td>
		</tr>
	<% end %>
  </tbody>
</table>

