<div class="container">
  <% if @orders.count > 0 %>
    <h3><i class="fas fa-shopping-cart"></i> Carro de pago de cuotas </h3>
    <table class="table table-striped table-dark col-6 fees-table">
      <thead>
        <tr>
          <th scope="col">Fecha cuota</th>
          <th scope="col">Valor</th>
        </tr>
      </thead>
      <tbody>
        <% @orders.each do |order| %>
          <tr>
            <td> <%= order.fee.fees_date.strftime("%m - %Y") %> </td>
            <td> <%= order.price %></td>
          </tr>
        <% end %>
        <tr class="table-dark">
        <td><strong>Total de la compra:</strong></td>
        <td><strong><%= @total %></strong></td>
        </tr>
      </tbody>
    </table>
    <%= link_to 'Limpiar carro', clean_orders_path, class: 'btn btn-outline-danger'  %>
    <%= link_to 'Confirmar pago', pre_pay_billings_path, class: 'btn btn-success' %> 

  <% else %>
    <p>No tienes cuotas por pagar.</p>
<% end %>
</div>
